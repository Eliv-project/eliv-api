model User {
    id        Int      @id @default(autoincrement())
    email     String   @unique
    username  String   @unique
    gender    Boolean
    password  String
    avatar    Json
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    role   Role @relation(fields: [roleId], references: [id])
    roleId Int

    oauthLinks OAuthLink[]
}
